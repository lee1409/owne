{
  "name": "owne",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish-release": "lerna publish patch"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
