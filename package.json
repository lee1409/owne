{
  "name": "owne",
  "private": true,
  "scripts": {
    "publish-release": "lerna publish",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "workspaces": {
    "packages": [
      "cms",
      "mobile",
      "web"
    ],
    "nohoist": [
      "cms/**",
      "mobile/**",
      "web/**"
    ]
  }
}
