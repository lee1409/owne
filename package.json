{
  "name": "owne",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^26.0.24",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "shelljs": "^0.8.4",
    "yaml": "^1.10.2"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "workspaces": {
    "packages": [
      "mobile",
      "web",
      "cms"
    ]
  },
  "scripts": {
    "version": "lerna version --exact --no-push --no-git-tag-version",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prepare": "husky install",
    "start": "npm-run-all -l -p web:start cms:start",
    "cms:predeploy": "cd cms && yarn predeploy",
    "cms:deploy": "cd cms && yarn deploy",
    "cms:start": "cd cms && npm run-script start",
    "web:start": "cd web && yarn start",
    "web:build": "cd web && yarn build"
  }
}
