{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": "release/*",
      "bump": "patch",
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "useWorkspaces": true,
  "version": "independent"
}
